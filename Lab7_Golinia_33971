 google.colab import output\n","from IPython.display import display, HTML\n","import sqlite3\n","\n","# Funkcja zapisu danych do bazy\n","def save_to_db(form_data):\n","    conn = sqlite3.connect('pacjenci.db')\n","    cursor = conn.cursor()\n","\n","    # Tworzenie tabeli, jeśli nie istnieje\n","    cursor.execute('''\n","        CREATE TABLE IF NOT EXISTS pacjenci (\n","            id INTEGER PRIMARY KEY AUTOINCREMENT,\n","            fname TEXT,\n","            lname TEXT,\n","            pesel TEXT,\n","            dob TEXT,\n","            gender TEXT,\n","            phone TEXT,\n","            email TEXT\n","        )\n","    ''')\n","\n","    # Wstawienie danych do tabeli\n","    cursor.execute('''\n","        INSERT INTO pacjenci (fname, lname, pesel, dob, gender, phone, email)\n","        VALUES (?, ?, ?, ?, ?, ?, ?)\n","    ''', (\n","        form_data['fname'],\n","        form_data['lname'],\n","        form_data['pesel'],\n","        form_data['dob'],\n","        form_data['gender'],\n","        form_data['phone'],\n","        form_data['email']\n","    ))\n","\n","    # Zatwierdzenie zmian i zamknięcie połączenia\n","    conn.commit()\n","    conn.close()\n","\n","    return \"✅ Dane zapisane pomyślnie!\"\n","\n","# Rejestracja funkcji w Colabie\n","output.register_callback('notebook.saveToDb', save_to_db)\n","\n","# HTML + CSS + JS formularza\n","html_code = \"\"\"\n","<!DOCTYPE html>\n","<html lang=\"pl\">\n","<head>\n","    <meta charset=\"UTF-8\">\n","    <title>Rejestracja Pacjenta</title>\n","    <style>\n","        body {\n","            font-family: Arial, sans-serif;\n","            background: #f0f4f8;\n","            display: flex;\n","            justify-content: center;\n","            align-items: center;\n","            height: 100vh;\n","            margin: 0;\n","        }\n","\n","        .form-container {\n","            background: white;\n","            padding: 30px 40px;\n","            border-radius: 12px;\n","            box-s